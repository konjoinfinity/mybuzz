{{#if error}}
   <div class="red lighten-2" style="margin:10px; padding:10px; border-radius:15px; text-align: center">{{error}}</div>
{{/if}}
{{#if info}}
  <div class="yellow lighten-4" style="margin:10px; padding:10px; border-radius:15px; text-align: center">{{info}}</div>
{{/if}}
<div class="row">
  <div class="col s12 m6" style="margin:10px">
  <h4 style="text-align: center">Login</h4>
  <div class="card">
  <form action="/login" method="post">
    <div class="input-field col s12">
      <input type="email" name="username" id="username" placeholder="Email">
    </div>
    <div class="input-field col s12">
      <input type="password" name="password" id="password" placeholder="Password">
    </div>
    <div class="input-field col s12" style="display: flex; flex-direction: row; justify-content: center">
      <button type="submit" class="btn waves-effect waves-light teal darken-1">Login</button>
    </div>
</form>
</div>
</div>
</div>
