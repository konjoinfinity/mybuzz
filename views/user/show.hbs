<div class="container">
  <div class="row">
      <div class="col s6">
        <div class="card blue lighten-5">
          <div class="card-content white-black center">
<h3>{{user.name}}</h3>
<p>Gender - {{user.gender}}</p>
<p>Weight - {{user.weight}}</p>
<p>Email - {{user.email}}</p>
<p># of Buzzes - {{user.buzzes.length}}</p>
{{#if user.buzzes}}
  {{#each user.buzzes }}
  <div class="row">
      <div class="col s12">
        <div class="card orange lighten-5">
          <div class="card-content white-black center">
    <p>Number of Drinks - {{numberOfDrinks}}</p>
<p>Drink Type - {{drinkType}}</p>
<p>Number of Hours - {{hours}}</p>
</div>
</div>
</div>
</div>
  {{/each}}
{{/if}}
<h4>Current BAC</h4>
<h5>{{user.bac}}</h5>
</div>
</div>
</div>
</div>
</div>
