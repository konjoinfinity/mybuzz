{{#if error}}
<div class="red lighten-2" style="margin:10px; padding:10px; border-radius:15px; text-align: center">{{error}}</div>
{{/if}}
{{#if info}}
<div class="yellow lighten-4" style="margin:10px; padding:10px; border-radius:15px; text-align: center">{{info}}</div>
{{/if}}
<div class="row">
    <div class="col s12 m6" style="margin:10px">
  <h4>Sign Up</h4>
  <div class="card">
  <form action="/signup" method="post">
    <div class="input-field col s12">
      <input type="text" name="username" id="username" placeholder="Email">
    </div>
      <div class="input-field col s12">
    <select id="gender_select">
      <option value="" disabled selected>Choose Gender</option>
      <option value="Male">Male</option>
      <option value="Female">Female</option>
    </select>
    <input type="hidden" name="gender" id="gender" />
  </div>
<div class="input-field col s12">
  Select Weight
  <input type="number" name="weight"
  min="80" max="400" step="5" value="100">
</div>
    <div class="input-field col s12">
      <input type="password" name="password" id="password" placeholder="Password">
    </div>
    <div class="input-field col s12">
      <input type="password" name="confirmpassword" id="confirmpassword" placeholder="Confirm Password">
    </div>
    <div class="input-field col s12">
      <button type="submit" class="btn waves-effect waves-light teal darken-1">Sign Up</button>
    </div>
</form>
</div>
</div>
</div>
